<odoo>
    <record id="view_program_list_tree" model="ir.ui.view">
        <field name="name">view_program_list_tree</field>
        <field name="model">g2p.program</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name" />
                <field name="target_type" />
                <field name="eligible_beneficiaries_count" string="#  Enrolled ADD Beneficiaries" />
                <field name="cycles_count" string="# Cycles" />
                <field name="company_id" groups="base.group_multi_company" />
                <field
                    name="state"
                    decoration-success="state=='active'"
                    decoration-warning="state=='ended'"
                    widget="badge"
                    string="State"
                />
                <button
                    type="object"
                    icon="fa-users"
                    title="Open eligible beneficiaries form"
                    class="oe_stat_button"
                    name="open_eligible_beneficiaries_form"
                    string="Beneficiaries list"
                />
                <field name="active" column_invisible="1" />
            </tree>
        </field>
    </record>
</odoo>